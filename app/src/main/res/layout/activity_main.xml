<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posture Detection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Camera Preview Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cameraCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerTextView"
        app:layout_constraintBottom_toTopOf="@id/resultCard"
        app:layout_constraintDimensionRatio="3:4">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Detection Overlay -->
        <TextView
            android:id="@+id/overlayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_overlay"
            android:padding="8dp"
            android:text="Analyzing..."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <!-- Result Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/resultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detection Result"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to analyze"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/toggleAnalysisButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Start Analysis"
            android:textSize="16sp"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="28dp" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Restart"
            android:textSize="16sp"
            android:backgroundTint="@color/secondary_color"
            android:visibility="gone"
            app:cornerRadius="28dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>