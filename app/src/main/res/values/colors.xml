<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
      Dark Monochrome Theme
      This palette uses shades of black, white, and gray for a clean, modern UI.
    -->

    <!-- Warna utama aplikasi (digunakan untuk tombol aksi) -->
    <color name="colorPrimary">#FF373737</color> <!-- Abu-abu gelap untuk tombol -->
    <color name="colorPrimaryDark">#FF000000</color> <!-- Hitam -->
    <color name="colorOnPrimary">#FFFFFFFF</color> <!-- Putih, untuk teks di atas warna primer -->

    <!-- Warna untuk status 'Stop' atau 'Error' -->
    <color name="colorError">#FFCF6679</color> <!-- Warna error standar untuk tema gelap -->
    <color name="colorOnError">#FF000000</color> <!-- Hitam, untuk teks di atas warna error -->

    <!-- Warna latar belakang dan permukaan UI -->
    <color name="colorBackground">#FF121212</color> <!-- Latar belakang utama yang sangat gelap -->
    <color name="colorBackgroundWhite">#FFFFFF</color> <!-- Latar belakang utama yang sangat gelap -->
    <color name="colorBackgroundRed">#FF0000</color> <!-- Latar belakang utama yang sangat gelap -->
    <color name="colorSurface">#FF1E1E1E</color> <!-- Permukaan yang sedikit lebih terang (mis. untuk Card) -->
    <color name="colorSurfaceTransparent">#A8000000</color> <!-- 65% transparan hitam -->

    <!-- Warna teks -->
    <color name="textColorPrimary">#FFFAFAFA</color> <!-- Putih terang untuk teks utama -->
    <color name="textColorSecondary">#FFAAAAAA</color> <!-- Abu-abu lebih redup untuk teks sekunder -->
</resources>
